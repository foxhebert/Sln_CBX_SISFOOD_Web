@model IEnumerable<CBX_Web_SISCOP.wsConfiguracion.JerarquiaOrg>

@{
    ViewBag.Title = "JerarquiaOrganizacional";
}

<div class="row">
    <!--INICIO PANEL-->
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">

            <div class="col-md-4 col-sm-4 col-xs-12">
                <label class="" style="text-align: right !important;">Buscar </label>
                <input type="text" class="form-control" placeholder="Buscar por Código o Descripción" id="txt-buscar-JO">
            </div>

            <div class="col-md-2 col-sm-2 col-xs-12">
                <label style="text-align:right;" class="control-label">Estado</label>
                <select class="form-control" id="cbo-filter-estado-JO">
                    <option value="2">Todos</option>
                    <option value="1" selected>Activo</option>
                    <option value="0">Inactivo</option>
                </select>
            </div>

        </div>
    </div>
</div>

<!-- PANEL DE MENUS -->
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="breadcrumb">
            <a class="breadcrumb__step breadcrumb__step--active" href="#" id="PadreMenu_txt">Configuración</a>
            <a class="breadcrumb__step" href="#" id="HijoMenu_txt">Jerarquía Organizacional</a>
        </div>
    </div>
</div>
<div class="row">
    <!-- PANEL TABLA -->
    <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Listado de Jerarquías Organizacionales</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <input type="button" id="btn-new-jerarquia" class="btn btn-primary" value="Nueva Jerarquía">
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content" id="content-table-JO">
                <table id="datatable-jerOrg" class="table table-striped table-bordered table-responsive pre-wrap" cellspacing="0" style="width:100%;">
                    @* <table class="table table-striped table-bordered table-responsive nowrap" id="datatable-jerOrg" cellspacing="0" width="100%">*@
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Descripción</th>
                            <th>Nivel Jerárquico</th>
                            <th>Jerarquía Superior</th>
                            <th>Estado</th>
                            <th>Acción</th>
                            <th style="display:none">strCoJerPadre5</th>
                            <th style="display:none">IntIdJerOrg6</th>
                            <th style="display:none">strCoIntJO7</th>
                            <th style="display:none">bitFlActivo8</th>
                            <th style="display:none">bitFlActivo8</th>
                            <th style="display:none">bitFlActivo8</th>
                            <th style="display:none">bitFlActivo8</th>
                            <th style="display:none">bitFlActivo8</th>
                            <th style="display:none">bitFlActivo8</th>



                        </tr>
                    </thead>
                    <tbody></tbody>

                </table>


            </div>
        </div>
    </div>

    <!-- SEGUNDO PANEL -->
    <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12">
        <div class="form-hide-jerarquia" hidden>

            <div class="x_panel">
                <div class="x_title">
                    <h2>Información de la Jerarquía</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <input type="button" id="btn-save-change-jerarquia" class="btn btn-primary" value="Guardar">
                            <input type="button" id="btn-update-jerarquia" class="btn btn-success" value="Actualizar">
                        </li>
                        <li>
                            <input type="button" id="btn-cancel-jerarquia" class="btn btn-dark" value="Cancelar">
                        </li>

                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">

                    <form class="form-horizontal form-label-left">
                        <div class="row">
                            <div class="col-md-6 col-sm-6 col-xs-6">
                                <div class="form-group">
                                    <label>Nivel Jerárquico (*)</label>
                                    <select class="form-control">
                                        <option>Seleccione</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-6">
                                <div class="form-group">
                                    <div>
                                        <label class="col-md-7 col-sm-7 col-xs-6"> Jerarquía Superior </label>
                                        <div class="col-md-5 col-sm-5 col-xs-6 text-right">
                                            <input type="checkbox" class=" js-switch" checked /> Activo
                                        </div>
                                    </div>

                                    <select class="form-control">
                                        <option>Seleccione</option>
                                    </select>
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="border-section">
                                <div class="col-md-6 col-sm-6 col-xs-6">
                                    <div class="form-group">
                                        <label>Código (*)</label>
                                        <input type="text" class="form-control" placeholder="Nº Terminal">
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-6 col-xs-6">
                                    <div class="form-group">
                                        <label>Descripción (*)</label>
                                        <input type="text" class="form-control" placeholder="Descripción ">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />

                        <div class="row">
                            <div class="col-md-6 col-sm-6 col-xs-6">
                                <div class="form-group">
                                    <label>Campos Adicionales a Solicitar</label>
                                </div>
                            </div>
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <select class="select2_multiple form-control" multiple="multiple">
                                    <option>Choose option</option>
                                    <option>RESPONSABLE</option>
                                    <option>REPRESENTANTE</option>
                                    <option>LEGAL</option>
                                    <option>RUC</option>
                                    <option>DIRECCIÓN</option>
                                    <option>UBIGEO</option>
                                    <option>LOGO</option>
                                </select>
                            </div>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>

</div>

<script>
    $(document).ready(function () {

        TablaJerar();
    }
    );
</script>
