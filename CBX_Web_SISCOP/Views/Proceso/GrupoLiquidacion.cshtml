
@{
    ViewBag.Title = "Grupo de Liquidacion";
}

<div class="row">
    <!--INICIO PANEL-->
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">

            <div class="col-md-3 col-sm-3 col-xs-12">
                <label class="" style="text-align: right !important;">Buscar </label>
                <input type="text" class="form-control" placeholder="Buscar por Código y Descripción" id="filtroGrupoLiq">
            </div>

            <div class="col-md-2 col-sm-2 col-xs-12 divUniOrg">
                <label class="control-label">Unid Organizacional</label>
                <select class="form-control" id="cboUniOrg">
                    <option value="0" selected>Todos</option>
                </select>
            </div>
            <div class="col-md-2 col-sm-2 col-xs-12 divPlanilla">
                <label class="control-label">Planilla</label>
                <select class="form-control" id="cboPlanilla">
                    <option value="0" selected>Seleccione una U.Org.</option>
                </select>
            </div>
            <div class="col-md-2 col-sm-2 col-xs-12 divPlanilla">
                <label class="control-label">Periodo</label>
                <select class="form-control" id="periodoFiltroId">
                    <option value="0" selected>Seleccione una Planilla</option>
                </select>
            </div>
            <div class="col-md-2 col-sm-2 col-xs-12 divPlanilla">
                <label class="control-label">Estado</label>
                <select class="form-control" id="filtroActivo">
                    <option value="2">Todos</option>
                    <option value="1" selected>Activo</option>
                    <option value="0">Inactivo</option>
                </select>
            </div>

        </div>
    </div>
</div>

<!-- PANEL DE MENUS -->
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="breadcrumb">
            <a class="breadcrumb__step breadcrumb__step--active" href="#" id="PadreMenu_txt">Proceso</a>
            <a class="breadcrumb__step" href="#" id="HijoMenu_txt">Grupo de Liquidación</a>
        </div>
    </div>
</div>

<div class="row">
    <!-- PANEL TABLA -->
    <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Listado de Grupos de Liquidación</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <input type="button" id="btn-new-grupoliq" class="btn btn-primary" value="Nuevo Grupo de Liquidación">
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table id="datatable-GrupoLiq" class="table table-striped table-bordered table-responsive pre-wrap" cellspacing="0" style="width:100%;">
                    @*<table id="datatable-GrupoLiq" class="table table-striped table-bordered table-responsive nowrap " cellspacing="0" width="100%">*@
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Descripción</th>
                            <th>Periodo</th>
                            <th>Planilla</th>
                            <th>Und. Organizacional</th>
                            <th>Estado</th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>


            </div>
        </div>
    </div>

    <!-- SEGUNDO PANEL -->
    <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12">
        <div class="form-hide-grupoliq" hidden>
            <div class="x_panel">
                <div class="x_title">
                    <h2>Información del Grupo de Liquidación</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <input type="button" id="btn-save-change-grupoliq" class="btn btn-primary" value="Guardar">
                        </li>
                        <li>
                            <input type="button" id="btn-cancel-grupoliq" class="btn btn-dark" value="Cancelar">
                        </li>

                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <form class="form-horizontal form-label-left">
                        <input type="text" class="form-control" id="grupoLiqId" hidden>
                        <div class="row">
                            <div class="col-md-6 col-sm-6 col-xs-6">
                            </div>
                            <div style="text-align:right;" id="11">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 col-sm-6 col-xs-6">
                                <div class="form-group">
                                    <label>Dependencia Jerárquica (*)</label>
                                    <select class="form-control" id="dependenciaJerId">
                                        @*<option>Seleccione</option>*@
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-6">
                                <div class="form-group">
                                    <label>Und. Organizacional</label>
                                    <select class="form-control" id="unidadOrgId">
                                        @*<option value="0">Seleccione</option>*@
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="border-section">
                                <div class="col-md-6 col-sm-6 col-xs-6">
                                    <div class="form-group" id="ValCode">
                                        <label>Código (*)</label>
                                        <input type="text" class="form-control" placeholder="Código" id="codigoId" @*pattern="^([A-Za-z0-9])+"*@ maxlength="8" onkeypress="validarCodigoAll(event)">
                                        <div class="notifry_error" style="background-color:#4CA4DE;color:white;text-align:center;"></div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-6 col-xs-6">
                                    <div class="form-group" id="Valdes">
                                        <label>Descripción (*)</label>
                                        <input type="text" class="form-control" placeholder="Descripción" id="descripcionId" onkeypress="validarDescripcionAll(event)">
                                        <div class="notifry_error" style="background-color:#4CA4DE;color:white;text-align:center;"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-6 col-sm-6 col-xs-6">
                                <div class="form-group">
                                    <label> Planilla (*) </label>
                                    <select class="form-control" id="planillaId">
                                        <option value="0">Seleccione</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-6">
                                <div class="form-group">
                                    <label> Periodo (*) </label>
                                    <select class="form-control" id="periodoId">
                                        <option value="0">Seleccione</option>
                                    </select>
                                </div>
                            </div>
                            <div id="containerCampos"></div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>

</div>
<script src="~/Scripts/util/GrupoLiq.js"></script>
