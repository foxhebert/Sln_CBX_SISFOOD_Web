
@{
    ViewBag.Title = "PeriodoPago";
}
<div class="row">
    <!--INICIO PANEL-->
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="col-lg-4 col-md-5 col-sm-5 col-xs-12">
                <label class="control-label">&nbsp;</label>
                <input type="text" class="form-control" placeholder="Buscar por Código y Descripción" id="filtroPeriodo">
            </div>

            <div class="col-lg-2 col-md-3 col-sm-3 col-xs-12">
                <label class="control-label">Unidad Organizacional</label>
                <select class="form-control" id="cboUniOrg">
                    <option value="0" selected>Seleccione</option>
                </select>
            </div>

            <div class="col-lg-2 col-md-3 col-sm-3 col-xs-12">
                <label class="control-label">Planilla</label>
                <select class="form-control" id="cboPlanilla">
                    <option value="0" selected>Seleccione</option>
                </select>
            </div>

            <div class="col-lg-2 col-md-5 col-sm-5 col-xs-12">
                <label class="control-label">Rango de Fechas</label>
                <div id="filtroFecha" class="form-control range-datepicker" style="background: #fff; cursor: pointer; padding: 5px 10px; border: 1px solid #ccc">
                    <i class="glyphicon glyphicon-calendar fa fa-calendar"></i>
                    <span>January 01, 2019 - January 28, 2019</span> <b class="caret"></b>
                </div>
            </div>

            <div class="col-lg-1 col-md-3 col-sm-3 col-xs-12">
                <label class="control-label">Estado</label>
                <select class="form-control" id="filtroActivo">
                    <option value="2">Todos</option>
                    <option value="1" selected>Activo</option>
                    <option value="0">Inactivo</option>
                </select>
            </div>

            <div class="col-lg-1 col-md-3 col-sm-3 col-xs-12">
                <label class="control-label">Situación</label>
                <select class="form-control" id="filtroSituacion">
                    <option value="2" selected>Todos</option>
                    <option value="0">Abierto</option>
                    <option value="1">Cerrado</option>
                </select>
            </div>

        </div>
    </div>
</div>

<!-- PANEL DE MENUS -->
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="breadcrumb">
            <a class="breadcrumb__step breadcrumb__step--active" href="#" id="PadreMenu_txt">Proceso</a>
            <a class="breadcrumb__step" href="#" id="HijoMenu_txt">Periodo Pago</a>
        </div>
    </div>
</div>

<div class="row">
    <!-- PANEL TABLA -->
    <div class="col-lg-7 col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Listado de Periodos</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <input type="button" id="btn-new-periodo" class="btn btn-primary" value="Nuevo Periodo">
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">

                <table id="datatable-Periodo" class="table table-striped table-bordered table-responsive nowrap" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Descripción</th>
                            <th>Mes - Año</th>
                            <th>Planilla</th>
                            <th>Unid. Organizacional</th>
                            <th>Situación</th>
                            <th>Estado</th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>


            </div>
        </div>
    </div>

    <!-- SEGUNDO PANEL -->
    <div class="col-lg-5 col-md-12 col-sm-12 col-xs-12">
        <div class="form-hide-periodo" hidden>
            <div class="x_panel">
                <div class="x_title">
                    <h2>Información del Periodo</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <input type="button" id="btn-save-change-periodo" class="btn btn-primary" value="Guardar Cambios">
                        </li>
                        <li>
                            <input type="button" id="btn-cancel-periodo" class="btn btn-dark" value="Cancelar">
                        </li>

                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <form class="form-horizontal form-label-left">
                        <input type="text" class="form-control" id="periodoId" hidden>
                        <div class="row">
                            <div class="col-md-6 col-sm-6 col-xs-6">
                            </div>
                            <div style="text-align:right;" id="11">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 col-sm-6 col-xs-6">
                                <div class="form-group">
                                    <label>Dependencia Jerárquica (*)</label>
                                    <select class="form-control" id="dependenciaJerId">
                                        @*<option>Seleccione</option>*@
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-6">
                                <div class="form-group">
                                    <label class="col-md-7 col-sm-7 col-xs-6"> Unid. Organizacional </label>
                                    <select class="form-control" id="unidadOrgId">
                                        @*<option value="0">Seleccione</option>*@
                                    </select>
                                </div>
                            </div>
                        </div>

                        @*<div class="ln_solid"></div>*@

                        <div class="row">
                            <div class="border-section">
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <div class="row">
                                        <div class="col-md-6 col-sm-6 col-xs-6">
                                            <div class="form-group" id="ValCode">
                                                <label>Código (*)</label>
                                                <input type="text" class="form-control" placeholder="Código" id="codigoId" pattern="^([A-Za-z0-9])+" maxlength="8" onkeypress="return avoidSpaceInput(event)">
                                                <div class="notifry_error" style="background-color:#4CA4DE;color:white;text-align:center;"></div>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-6">
                                            <div class="form-group" id="Valdes">
                                                <label>Descripción (*)</label>
                                                <input type="text" class="form-control" placeholder="Descripción" id="descripcionId">
                                                <div class="notifry_error" style="background-color:#4CA4DE;color:white;text-align:center;"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <div class="row">
                                        <div class="col-md-6 col-sm-6 col-xs-6">
                                            <div class="form-group">
                                                <label>Planilla (*)</label>
                                                <select class="form-control" id="planillaId">
                                                    <option value="0">seleccione</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-6">
                                            <br />
                                            <div class="checkbox">
                                                <label>
                                                    <input type="checkbox" class="check_especias" id="proyectoId"> Proyectado
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />

                        <div class="row">
                            <div class="col-md-6 col-sm-6 col-xs-6">
                                <div class="form-group">
                                    <label>Fecha Inicio (*)</label>
                                    <div class="control-group">
                                        <div class="controls">
                                            <div class="input-prepend input-group">
                                                <span class="add-on input-group-addon"><i class="glyphicon glyphicon-calendar fa fa-calendar"></i></span>
                                                <input id="fechaIniID" type="text" class="form-control" value="" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-6">
                                <div class="form-group">
                                    <label>Fecha Fin (*)</label>
                                    <div class="control-group">
                                        <div class="controls">
                                            <div class="input-prepend input-group">
                                                <span class="add-on input-group-addon"><i class="glyphicon glyphicon-calendar fa fa-calendar"></i></span>
                                                <input id="fechaFinId" type="text" class="form-control" value="" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 col-sm-6 col-xs-6">
                                <div class="form-group">
                                    <label>Fecha de Cierre</label>
                                    <div class="control-group">
                                        <div class="controls">
                                            <div class="input-prepend input-group">
                                                <span class="add-on input-group-addon"><i class="glyphicon glyphicon-calendar fa fa-calendar"></i></span>
                                                <input id="fechaCierreId" type="text" class="form-control" value="" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-6">
                                <div class="form-group">
                                    <label>Mes (*)</label>
                                    <select class="form-control" id="mesId">
                                        <option value="0" selected>Seleccione</option>
                                        <option value="1">Enero</option>
                                        <option value="2">Febrero</option>
                                        <option value="3">Marzo</option>
                                        <option value="4">Abril</option>
                                        <option value="5">Mayo</option>
                                        <option value="6">Junio</option>
                                        <option value="7">Julio</option>
                                        <option value="8">Agosto</option>
                                        <option value="9">Septiembre</option>
                                        <option value="10">Octubre</option>
                                        <option value="11">Noviembre</option>
                                        <option value="12">Diciembre</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 col-sm-6 col-xs-6">
                                <div class="form-group">
                                    <label>Año (*)</label>
                                    <input class="form-control" type="number" placeholder="Año" id="anioId" min="1900" max="2120" />
                                </div>
                            </div>
                        </div>

                        <div class="ln_solid"></div>
                        <div id="containerCampos"></div>
                    </form>
                </div>
            </div>

        </div>
    </div>

</div>

@*<script src="~/Scripts/util/Periodo.js"></script>*@
