
@{
    ViewBag.Title = "Perfil";
}


<div class="row">
    <!--INICIO PANEL-->
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">

            <!-- FILTRO INPUT Buscar -->
            <div class="control-label col-md-4 col-sm-4 col-xs-12">
                <label class="" style="text-align: right !important;">Buscar </label>
                <input type="text" class="form-control" id="strBusquedaGeneral" placeholder="Buscar por Código o Descripción"> @*filtroTablaPerfil*@
            </div>


            <!-- COMBO HIDDEN -->
            <div class="" hidden>
                <label class="control-label col-md-1 col-sm-1 col-xs-12">Tipo de Empresa</label>
                <div class="col-md-2 col-sm-2 col-xs-12 form-group has-feedback">
                    <select class="form-control" id="CampTipo">
                        <option value="0" selected>Todos</option>
                    </select>
                </div>
            </div>

            <!-- FILTRO COMBO ACTIVO/INACTIVO -->
            <div class="control-label col-md-4 col-sm-4 col-xs-12">
                <label class="" style="text-align: right !important;">Estado</label>
                <div class="">
                    <select class="form-control" id="bitActivoPerfil">
                        <option value="2">Todos</option>
                        <option value="1" selected="selected">Activo</option>
                        <option value="0">Inactivo</option>
                    </select>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- PANEL TITULO -->
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="breadcrumb d-flex">
            <a href="#" id="PadreMenu_txt" class="breadcrumb__step breadcrumb__step--active">SEGURIDAD</a>
            <a id="HijoMenu_txt" class="breadcrumb__step">Perfil</a>
        </div>
    </div>
</div>



<div class="row">

    <!-- PANEL TABLA PRINCIPAL PARA LISTAR A LA IZQUIERDA -->
    <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12">
        <div class="x_panel">

            <div class="x_title">
                <h2>Listado de Perfil</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <input type="button" id="btn_nuevo_perfil" class="btn btn-primary" value="Nuevo Perfil">
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>


            <div class="x_content">

                @* <table id="tablaPerfil" class="table table-striped table-bordered table-responsive pre-wrap nowrap" cellspacing="0" sstyle="width:100%;"> *@
                <table id="tablaPerfil" class="table table-striped table-bordered table-responsive nowrap" cellspacing="0" style="width:100%;">
                    <thead>
                        <tr>
                            <th style="display:none">Acción</th>
                            <th>Código</th>
                            <th>Descripción</th>
                            <th>Tipo Admin</th>
                            <th>Estado</th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>

                <style type="text/css">
                    .saltoLinea {
                        font-size: 11px;
                        font-family: Verdana, Geneva, Arial, Helvetica, sans-serif;
                        margin-bottom: 25px;
                    }
                </style>

            </div>
        </div>
    </div>


    <!-- SEGUNDO PANEL NUEVO PERFIL-->
    <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12">
        <div class="form-hide-perfil" hidden>

            <div class="x_panel">

                <div class="x_title">
                    <h2>Información de Perfil</h2>

                    <!-- TRES BOTONES GUARDAR/ACTUALIZAR y CANCELAR -->
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <input type="button" id="btn-guardar-change-perfil" class="btn btn-primary" value="Guardar">
                            <input type="button" id="btn-update-perfil" class="btn btn-success" value="Actualizar" hidden>
                        </li>
                        <li>
                            <input type="button" id="btn-cancel-perfil" class="btn btn-dark" value="Cancelar">
                        </li>
                    </ul>


                    <div class="clearfix"></div>
                </div>
                <div class="x_content">

                    <form class="form-horizontal form-label-left">
                        <!-- CHECK ACTIVO INACTIVO -->
                        @*<div class="row">
                                <div style="text-align:right; margin-right:20px;">

                                    <input type="checkbox" class="js-switch" id="switcher-c" checked="" />
                                    <label>Activo</label>

                                </div>
                            </div>*@
                        <div class="row">
                            <div class="col-md-6 col-sm-6 col-xs-6">
                            </div>
                            <div style="text-align:right;" id="11">
                            </div>
                        </div>


                        <!-- DOS CONTROLES INPUTS -->
                        <div class="row">
                            <div class="border-section">
                                <div class="col-md-6 col-sm-6 col-xs-6">
                                    <div class="form-group p-relative" id="strCoPerfil">
                                        @*<label>Código (*)</label><input type="text" placeholder="Código" maxlength="8" class="form-control"><div class="notifry_error_div"></div>*@
                                    </div>
                                </div> <div class="col-md-6 col-sm-6 col-xs-6">
                                    <div class="form-group p-relative" id="strDesPerfil">
                                        @*<label>Descripción (*)</label><input type="text" placeholder="Descripción " maxlength="50" class="form-control"><div class="notifry_error_div"></div>*@
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- DIVISION MENUS SUBMENUS -->
                        <div class="row">
                            <div class="mt-3">

                                <!-- MENUS EN UNA LISTA UL DESDE LE JS -->
                                <ul role="tablist" class="nav nav-tabs" id="menuPadre"></ul>


                                <!-- MENUS EN LISTAS DIVS DESDE LE JS -->
                                <!-- Nota: Todo lo contenido dentro de este div viene desde el js -->
                                <div class="tab-content" id="divMenusHijos">

                                    <div role="tabpanel" id="menuId1" class="tab-pane">
                                        <div class="p-2">



                                        </div>
                                    </div>

                                </div>


                            </div>
                        </div>

                    </form>

                    <input type="text" id="intidPerfil" hidden />

                    <!-- SUBMENUS DE PRUEBA -->
                    <div id="sidebar-menu22" class="main_menu_side22 hidden-print main_menu22">
                        <div class="menu_section22">
                            <ul class="nav side-menu111">
                                <!-- *************************************************************
                                       MENUS LATERALES
                                **************************************************************-->
                            </ul>
                        </div>
                    </div>


                </div>




            </div>

        </div>
    </div>


</div>
