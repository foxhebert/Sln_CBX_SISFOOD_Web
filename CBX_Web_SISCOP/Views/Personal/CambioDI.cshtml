
@{
    ViewBag.Title = "CambioDI";
}

<div class="row">
    <!--INICIO PANEL-->
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">

            <div class="col-lg-4 col-md-5 col-sm-5 col-xs-12">
                <label class="" style="text-align: right !important;">Buscar </label>
                <input type="text" class="form-control" placeholder="Buscar por N째 Documento, Apellidos o Nombres" id="buscarId">
            </div>
            <div class="col-lg-2 col-md-3 col-sm-3 col-xs-12">
                <label style="text-align:left;" class="control-label">Unidad Organizacional</label>
                <select class="form-control" id="empresaId">
                    <option value="0" selected>Todos</option>
                </select>
            </div>
            <div class="col-lg-2 col-md-4 col-sm-4 col-xs-12">
                <label style="text-align:left;width:100%" class="control-label">Registro</label>
                <div id="fechaRegistroId" class="form-control range-datepicker AusentFec" style="background: #fff; cursor: pointer; padding: 5px 10px; border: 1px solid #ccc">
                    <i class="glyphicon glyphicon-calendar fa fa-calendar"></i>
                    <span>January 01, 2019 - January 28, 2019</span> <b class="caret"></b>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- PANEL DE MENUS -->
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="breadcrumb">
            <a class="breadcrumb__step breadcrumb__step--active" href="#" id="PadreMenu_txt"></a>
            <a class="breadcrumb__step" href="#" id="HijoMenu_txt"></a>
        </div>
    </div>
</div>

<div class="row">
    <!-- PANEL TABLA -->
    <div class="col-lg-7 col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2 style="white-space: normal;">Listado de Cambios de Documento de Identidad</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <input type="button" id="btn-new-cambioDI" class="btn btn-primary" value="Nuevo Cambio">
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table id="datatable-CambiosDI" class="table table-striped table-bordered table-responsive pre-wrap" cellspacing="0" style="width:100%;">
                    @*<table id="datatable-CambiosDI" class="table table-striped table-bordered" cellspacing="0" width="100%">*@
                    <thead>
                        <tr>
                            <th>N째 Documento Nuevo</th>
                            <th>Apellidos y Nombres</th>
                            <th>N째 Documento Antiguo</th>
                            <th>Unid. Organizacional</th>
                            <th>Usuario Reg.</th>
                            <th>Fecha Reg.</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- SEGUNDO PANEL -->
    <div class="col-lg-5 col-md-12 col-sm-12 col-xs-12">
        <div class="form-hide-cambioDI" hidden>

            <div class="x_panel">
                <div class="x_title">
                    <h2 style="white-space: normal;width: 52%;">Informaci처n de Cambio de Documento</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <input type="button" id="btn-save-change-cambioDI" class="btn btn-primary" value="Guardar">
                        </li>
                        <li>
                            <input type="button" id="btn-cancel-cambioDI" class="btn btn-dark" value="Cancelar">
                        </li>

                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/util/cambioDI.js"></script>
