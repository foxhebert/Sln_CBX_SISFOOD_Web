<script>
    $(document).ready(function () {

        $.post(
            '/Organizacion/ComboDependenciaFiltro', /*GetCampJerar*///modificado 02.09.2021
            {},
            (response) => {
                $('#cboDepenCargo').empty();
                if (response.length > 1) {
                    $('#cboDepenCargo').append(' <option value="0"> Todos </option>');
                }
                response.forEach(element => {
                    $('#cboDepenCargo').append(
                        ' <option value="' + element.intidTipo + '">' + element.strDeTipo + '</option>'
                        //' <option value="' + element.IntIdJerOrg + '">' + element.strNomJerOrg + '</option>'
                    );
                });
                TablaCargos();
            }
        );

    });
</script>
