
@{
    ViewBag.Title = "Marcador";
}

<div class="row">
    <!--INICIO PANEL-->
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">

            <div class="col-md-4 col-sm-4 col-xs-12">
                <label class="" style="text-align: right !important;">Buscar </label>
                <input id="filtroMarc" type="text" class="form-control" placeholder="Buscar por Número de Terminal y Descripción">
            </div>

            <div class="col-md-2 col-sm-2 col-xs-12">
                <label class="control-label" style="text-align:right !important">Estado</label>
                <select class="form-control" id="filActiMarc">
                    <option value="2">Todos</option>
                    <option value="1" selected>Activo</option>
                    <option value="0">Inactivo</option>
                </select>
            </div>

        </div>
    </div>
</div>
<!-- PANEL DE MENUS -->
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="breadcrumb">
            <a class="breadcrumb__step breadcrumb__step--active" href="#" id="PadreMenu_txt">Organización</a>
            <a class="breadcrumb__step" href="#" id="HijoMenu_txt">Marcador</a>
        </div>
    </div>
</div>

<div class="row">
    <!-- PANEL TABLA -->
    <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Listado de Marcadores</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <input type="button" id="btn-new-Marcador" class="btn btn-primary" value="Nuevo Marcador">
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div id="tablaMarcadordiv" class="x_content">
                <table id="tablaMarcador" class="table table-striped table-bordered table-responsive pre-wrap" cellspacing="0" style="width:100%;">
                    @*<table id="tablaMarcador" class="table table-striped table-bordered table-responsive nowrap" cellspacing="0" width="100%">*@
                    <thead>
                        <tr>
                            <th>Número</th>
                            <th>Descripción</th>
                            <th>IP/Puerto</th>
                            <th>Local</th>
                            <th>Estado</th>
                            <th>Acción</th>
                            <th style="display:none">6</th>
                            <th style="display:none">7</th>
                            <th style="display:none">8</th>
                            <th style="display:none">9</th>
                            <th style="display:none">10</th>
                            <th style="display:none">11</th>
                            <th style="display:none">12</th>
                            <th style="display:none">13</th>
                            <th style="display:none">14</th>
                            <th style="display:none">15</th>
                            <th style="display:none">16</th>
                            <th style="display:none">17</th>
                        </tr>
                    </thead>
                    <tbody id="tablabodyMarcador"></tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- SEGUNDO PANEL -->
    <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12">
        <div class="form-hide-Marcador" hidden>

            <div class="x_panel">
                <div class="x_title">
                    <h2>Información del Marcador</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <input type="button" id="btn-save-change-marcador" class="btn btn-primary" value="Guardar">
                            <input type="button" id="btn-update-marcador" class="btn btn-success" value="Actualizar" hidden>
                        </li>
                        <li>
                            <input type="button" id="btn-cancel-marcador" class="btn btn-dark" value="Cancelar">
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <form class="form-horizontal form-label-left"></form>
                </div>
            </div>

        </div>
    </div>

</div>

<script>
    $(document).ready(function () {
        TablaMarcador();
    }
    );
</script>
